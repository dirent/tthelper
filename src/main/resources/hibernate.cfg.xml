<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
		
		<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
		<!--<property name="connection.url">jdbc:hsqldb:f:/e32_projects/tthelper/db/tthelper</property>-->
		<property name="connection.url">jdbc:hsqldb:/var/tthelper/tthelper</property>
		<!--<property name="connection.url">jdbc:hsqldb:/home/dirk/e32_projects/tthelper/db/tthelper</property>-->
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>
		
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="show_sql">false</property>
		<property name="hbm2ddl.auto">update</property>
	</session-factory>
</hibernate-configuration>